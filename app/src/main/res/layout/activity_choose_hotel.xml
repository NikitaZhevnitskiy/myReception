<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.ChooseHotelActivity"
    android:background="@color/colorAccent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto">


    <EditText
        android:id="@+id/choose_hotel_search"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="10dp"
        android:background="@drawable/search_edit_selector"
        android:drawableStart="@mipmap/ic_search_black_24dp"
        android:ems="10"
        android:gravity="start|center_vertical"
        android:hint="@string/search"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:textColorHint="@color/search_text_colors"
        />



    <ListView
        android:id="@+id/choose_hotel_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/choose_hotel_search"
        android:layout_alignParentStart="true"/>
    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/choose_hotel_progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        wheel:matProg_barColor="@color/mainBtn"
        wheel:matProg_progressIndeterminate="true"
        android:layout_alignTop="@+id/choose_hotel_list"
        />

</RelativeLayout>
